{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    // Eliminamos el bloque 'paths' que causaba conflictos locales
    // "paths": {
    //   "@/*": [
    //     "./*"
    //   ]
    // },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  // INICIO: Añadimos un bloque 'include' para que Vercel sepa qué archivos compilar
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
  // FIN: Añadimos un bloque 'include'
}